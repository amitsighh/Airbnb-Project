<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Sign up on Airbnb</h1>
    <div class="col-6 offset-3">

        <form action="/register" method="POST" class="needs-validation" novalidate>
            <!-- Full Name -->
            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input name="name" id="name" type="text" class="form-control" required>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input name="email" id="email" type="email" class="form-control" required>
            </div>

            <!-- Username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
            </div>

            <!-- Submit -->
            <button class="btn btn-danger w-100">Create Account</button>

            <!-- Divider -->
            <div class="text-center my-3">or</div>

            <!-- Dummy social buttons (Just for UI) -->
            <button class="btn btn-outline-dark w-100 mb-2" type="button">
                <i class="bi bi-google"></i> Continue with Google
            </button>
            <button class="btn btn-outline-dark w-100 mb-2" type="button">
                <i class="bi bi-apple"></i> Continue with Apple
            </button>
            <button class="btn btn-outline-secondary w-100" type="button">
                <i class="bi bi-envelope"></i> Continue with Email
            </button>
        </form>

        <!-- Already have account -->
        <div class="text-center mt-3">
            <small>Already have an account? <a href="/login">Log in</a></small>
        </div>
    </div>
</div>